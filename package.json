{
  "name": "atlas-monorepo",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "TrashScannerâ„¢ Platform",
  "author": "Anthony Tropeano",
  "repository": {
    "type": "git",
    "url": "https://github.com/iitoneloc/atlas.git"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "docker compose -f docker-compose.dev.yml up --build",
    "dev:web": "docker compose -f docker-compose.dev.yml up --build web",
    "dev:all": "docker compose -f docker-compose.dev.yml up --build",
    "build": "bun run build:db && bun run build:web && bun run build:api",
    "build:db": "bun --cwd packages/database build",
    "build:web": "bun --cwd apps/web build",
    "build:api": "bun --cwd apps/api build",
    "start": "bun --cwd apps/api start",
    "tests": "bun --cwd packages/database --env-file=.env.test test --no-parallel",
    "docker:dev": "docker compose -f docker-compose.dev.yml up --build",
    "docker:dev-down": "docker compose -f docker-compose.dev.yml down",
    "docker:dev-clean": "docker compose -f docker-compose.dev.yml down -v",
    "docker:test": "docker compose --env-file=packages/database/.env.test -f packages/database/docker-compose.test.yml run --rm test_app bun test --no-parallel",
    "docker:test-watch": "docker compose --env-file=packages/database/.env.test -f packages/database/docker-compose.test-watch.yml up --build",
    "docker:test-clean": "docker compose -f packages/database/docker-compose.test.yml down -v",
    "docker:dev-shell": "docker compose -f packages/database/docker-compose.dev.yml run --rm dev_app /bin/sh",
    "docker:test-shell": "docker compose -f packages/database/docker-compose.test.yml run --rm test_app /bin/sh"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.3.0"
  }
}
