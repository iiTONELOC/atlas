{
  "name": "atlas-monorepo",
  "private": true,
  "type": "module",
  "version": "1.0.0",
  "description": "TrashScannerâ„¢ Platform",
  "author": "Anthony Tropeano",
  "repository": {
    "type": "git",
    "url": "https://github.com/iitoneloc/atlas.git"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "docker": "docker compose -f docker-compose.dev.yml up --build",
    "build": "bun run build:web && bun run build:api",
    "build:web": "bun --cwd apps/web build",
    "build:api": "bun --cwd apps/api build",
    "start": "bun --cwd apps/api start",
    "tests": "bun --cwd packages/database --env-file=../../.env.test test --no-parallel",
    "docker:down": "docker compose -f docker-compose.dev.yml down",
    "docker:clean": "docker compose -f docker-compose.dev.yml down -v",
    "docker:prod": "docker compose -f docker-compose.prod.yml up --build",
    "docker:prod:down": "docker compose -f docker-compose.prod.yml down",
    "docker:prod:clean": "docker compose -f docker-compose.prod.yml down -v",
    "heroku:push": "heroku container:push web",
    "heroku:release": "heroku container:release web",
    "heroku:deploy": "heroku container:push web && heroku container:release web",
    "docker:test": "docker compose --env-file=.env.test -f docker-compose.test.yml run --rm test_app bun test --no-parallel",
    "docker:test:clean": "docker compose -f docker-compose.test.yml down -v",
    "docker:db-shell": "docker compose -f docker-compose.dev.yml run --rm dev_app /bin/sh",
    "docker:test:shell": "docker compose -f docker-compose.test.yml run --rm test_app /bin/sh"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.3.0"
  }
}
