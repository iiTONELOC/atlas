{
  "name": "atlas",
  "private": true,
  "type": "module",
  "description": "GraphQL API for TrashScannerâ„¢",
  "author": "Anthony Tropeano",
  "repository": {
    "type": "git",
    "url": "https://github.com/iitoneloc/atlas.git"
  },
  "homepage": "https://github.com/iitoneloc/atlas",
  "bugs": {
    "url": "https://github.com/iitoneloc/atlas/issues"
  },
  "keywords": [
    "graphql",
    "api",
    "bun",
    "typeorm",
    "typescript",
    "backend"
  ],
  "engines": {
    "bun": ">=1.3.0"
  },
  "scripts": {
    "dev": "bun --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist",
    "start": "bun dist/index.js",
    "tests": " bun --env-file=.env.test test",
    "test-up": "docker compose --env-file .env.test -f docker-compose.test.yml up --build --abort-on-container-exit --exit-code-from test_app; bun test-delete",
    "test-dev": "docker compose --env-file=.env.test -f docker-compose.test-watch.yml up --build --abort-on-container-exit --exit-code-from test_app; bun doc-test-delete",
    "test-dev-delete": "docker compose --env-file .env.test -f docker-compose.test-watch.yml down -v",
    "test-delete": "docker compose --env-file .env.test -f docker-compose.test.yml down -v && bun run test-dev-delete",
    "dev-up": "docker compose -f docker-compose.dev.yml up --build",
    "dev-down": "docker compose -f docker-compose.dev.yml down",
    "dev-delete": "docker compose -f docker-compose.dev.yml down -v",
    "dev-restart": "bun run doc-down && bun run doc-up"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "class-validator": "^0.14.3",
    "mysql2": "^3.16.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.28"
  }
}
