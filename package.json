{
  "name": "atlas",
  "private": true,
  "type": "module",
  "description": "GraphQL API for TrashScannerâ„¢",
  "author": "Anthony Tropeano",
  "repository": {
    "type": "git",
    "url": "https://github.com/iitoneloc/atlas.git"
  },
  "homepage": "https://github.com/iitoneloc/atlas",
  "bugs": {
    "url": "https://github.com/iitoneloc/atlas/issues"
  },
  "keywords": [
    "graphql",
    "api",
    "bun",
    "typeorm",
    "typescript",
    "backend"
  ],
  "engines": {
    "bun": ">=1.3.0"
  },
  "scripts": {
    "dev": "bun --env-file=../env.local --hot src/index.ts",
    "build": "bun build src/index.ts --outdir dist",
    "start": "bun dist/index.js",
    "tests": " bun --env-file=.env.test test",
    "docker:dev": "docker compose -env-file ../env.local -f docker-compose.dev.yml up --build",
    "docker:dev-down": "docker compose -f docker-compose.dev.yml down",
    "docker:dev-clean": "docker compose -f docker-compose.dev.yml down -v",
    "docker:test": "docker compose --env-file .env.test -f docker-compose.test.yml run --rm test_app bun test",
    "docker:test-watch": "docker compose --env-file .env.test -f docker-compose.test-watch.yml up --build",
    "docker:test-clean": "docker compose -f docker-compose.test.yml down -v",
    "docker:dev-shell": "docker compose -f docker-compose.dev.yml run --rm dev_app /bin/sh",
    "docker:test-shell": "docker compose --env-file .env.test -f docker-compose.test.yml run --rm test_app /bin/sh"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "class-validator": "^0.14.3",
    "mysql2": "^3.16.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.28"
  }
}
