{
  "name": "atlas-database",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Shared database layer for TrashScannerâ„¢",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./entities": "./src/entities/index.ts",
    "./repositories": "./src/repositories/index.ts",
    "./data-source": "./src/data-source.ts",
    "./utils": "./src/utils/index.ts"
  },
  "scripts": {
    "test": "bun --env-file=.env.test test --no-parallel",
    "build": "echo 'Bundled into API at build time'",
    "docker:dev": "docker compose -f docker-compose.dev.yml up --build",
    "docker:dev-down": "docker compose -f docker-compose.dev.yml down",
    "docker:dev-clean": "docker compose -f docker-compose.dev.yml down -v",
    "docker:test": "docker compose -f docker-compose.test.yml run --rm test_app bun test --no-parallel",
    "docker:test-watch": "docker compose -f docker-compose.test-watch.yml up --build",
    "docker:test-clean": "docker compose -f docker-compose.test.yml down -v",
    "docker:dev-shell": "docker compose -f docker-compose.dev.yml run --rm dev_app /bin/sh",
    "docker:test-shell": "docker compose -f docker-compose.test.yml run --rm test_app /bin/sh"
  },
  "dependencies": {
    "class-validator": "^0.14.3",
    "mysql2": "^3.17.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.28"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "typescript": "^5.9.3"
  }
}
